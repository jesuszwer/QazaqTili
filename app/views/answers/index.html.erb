<h2 class="has-text-weight-medium is-size-3">Результаты</h2>
  <div class="mt-5">
    <% @tests.each do |test| %>
      <a href="<%= answer_path(test_id: test.id, user_id: current_user.id) %>">
        <div class="box mb-4 is-flex is-align-items-center">
          <div>
            <h2 class="is-size-4 mb-2"><%= test.name %></h2>
            <p class="subtitle"><%= test.description %></p>
            <p class="has-text-primary is-size-5">
              <% case test.types %>
                <% when "base" %>
                  Базовый тест
                <% when "generated" %>
                  Сгенерированный
                <% else %>
                  <%= test.types %>
              <% end %>
            </p>
          </div>
        </div>
      </a>
    <% end %>
  </div>