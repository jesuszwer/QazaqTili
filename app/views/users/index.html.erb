<div class="container is-fluid">
  <h1 class="title">Профиль пользователя</h1>
  <% if current_user != nil %>
    <p class="subtitle">Вы вошли как <%= current_user.email %></p>
    <%= button_to 'Выйти', logout_path, method: :delete %>
  <% else %>
    <p class="subtitle">Вы не вошли</p>
    <%= link_to 'Войти', login_path %>
    <%= link_to 'Зарегистрироваться', signup_path %>
  <% end %>
</div>
