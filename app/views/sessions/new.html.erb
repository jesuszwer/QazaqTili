<div class="container is-fluid">
  <h1 class="title">Вход в систему</h1>
  <%= form_with(url: login_path) do |form| %>
    <div class="field">
      <%= form.label :email, class: 'label' %>
      <div class="control">
        <%= form.text_field :email, class: 'input' %>
      </div>
    </div>
    <div class="field">
      <%= form.label :password, class: 'label' %>
      <div class="control">
        <%= form.password_field :password, class: 'input' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= form.check_box :remember_me %>
        <%= form.label :remember_me, class: 'checkbox' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= form.submit 'Войти', class: 'button is-primary' %>
      </div>
    </div>
  <% end %>
</div>
