<div class="columns">
  <div class="column is-flex is-flex-direction-column">
    <h2 class="title box is-size-2 has-text-weight-medium mb-4">Добро пожаловать на <span class="has-text-accent-color has-text-weight-bold">QazaqTili</span> <span class="has-text-black has-text-weight-bold">Student Hub</span>!</h2>
    <figure class="image is-flex is-align-items-center is-align-self-center is-256x256">
      <%= image_tag "/logo.svg", alt: "Логотип"%>
    </figure>
    <div class="columns">
      <div class="column is-flex is-flex-direction-column">
        <div class="box mb-4 is-flex is-align-items-center is-flex-direction-column">
          <div class="is-flex is-align-items-center mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-coin mr-2" viewBox="0 0 16 16">
